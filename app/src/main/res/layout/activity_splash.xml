<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splash_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degrade_view_splash"
    >

    <ImageView
        android:id="@+id/splash_logo_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/pokeball"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="PokeDex"
        android:textColor="#FE3D10"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/splash_logo_image"
        app:layout_constraintStart_toStartOf="@+id/splash_logo_image"
        app:layout_constraintTop_toBottomOf="@+id/splash_logo_image" />

</androidx.constraintlayout.widget.ConstraintLayout>